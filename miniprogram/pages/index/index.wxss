.container {
  padding: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.section {
  width: 100%;
  text-align: center;
}

.title {
  font-size: 24px;
  margin-bottom: 30px;
  display: block;
}

.game-buttons {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

button {
  padding: 15px 30px;
  background-color: #007AFF;
  color: white;
  border-radius: 8px;
}