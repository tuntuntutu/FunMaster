/* pages/mahjong/room/detail.wxss */
.container {
  padding: 30rpx;
  background-color: var(--bg-color);
  min-height: 100vh;
  box-sizing: border-box;
}

.offline-tip {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #fff7e6;
  border-radius: 8rpx;
  margin-bottom: 30rpx;
}

.icon-warning {
  color: #faad14;
  margin-right: 10rpx;
}

.tip-text {
  font-size: 28rpx;
  color: #d46b08;
}

.room-header {
  background-color: var(--bg-color-light);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}


.room-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.room-info {
  flex: 1;
}

.room-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  display: block;
  gap: 16rpx;
  margin-bottom: 8rpx;
}

.room-name text:first-child {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-color);
}

.room-time {
  font-size: 24rpx;
  color: var(--text-color-light);
}

.room-fee {
  font-size: 28rpx;
  color: var(--danger-color);
  background-color: #fff1f0;
  padding: 8rpx 16rpx;
  border-radius: 4rpx;
  display: inline-block;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 20rpx;
}

.players-section {
  background-color: var(--bg-color-light);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.players-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.player-item {
  position: relative;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.empty-player {
  background-color: #fafafa;
  border: 2rpx dashed #e8e8e8;
  box-shadow: none;
}

.empty-player:active {
  background-color: #f0f0f0;
}

.player-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.player-position {
  font-size: 24rpx;
  color: #07c160;
  background: rgba(7, 193, 96, 0.08);
  padding: 4rpx 16rpx;
  border-radius: 4rpx;
  font-weight: 500;
}

.empty-player .player-position {
  background: rgba(0, 0, 0, 0.04);
  color: #999;
  font-weight: normal;
}

.player-main {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.player-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 3rpx solid #07c160;
  background-color: #fff;
  flex-shrink: 0;
}

.player-avatar.empty {
  border: 2rpx dashed #ddd;
  background-color: #f5f5f5;
}

.player-avatar-sm {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}

.player-info {
  flex: 1;
  min-width: 0;
}

.player-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.player-name.empty {
  color: #999;
  font-weight: normal;
}

.player-score {
  font-size: 32rpx;
  font-weight: bold;
  display: block;
}

.player-join-tip {
  text-align: center;
  padding: 8rpx 0;
}

.join-text {
  font-size: 24rpx;
  color: #07c160;
  background: rgba(7, 193, 96, 0.1);
  padding: 4rpx 16rpx;
  border-radius: 100rpx;
}

.player-actions {
  height: 28rpx;
}

.remove-btn {
  width: 28rpx;
  height: 28rpx;
  line-height: 24rpx;
  text-align: center;
  font-size: 24rpx;
  color: rgba(255, 77, 79, 0.8);
  background: rgba(255, 77, 79, 0.1);
  border-radius: 4rpx;
}

.remove-btn:active {
  background: rgba(255, 77, 79, 0.2);
}

.positive {
  color: #07c160;
}

.negative {
  color: #ff4d4f;
}

.games-section {
  background-color: var(--bg-color-light);
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.create-btn {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: var(--primary-color);
  background: none;
  border: none;
  padding: 0;
  line-height: 1;
}

.create-btn::after {
  display: none;
}

.icon-add {
  margin-right: 4rpx;
}

.games-list {
  margin-bottom: 30rpx;
}

.game-item {
  background-color: var(--bg-color);
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.game-item.selected {
  background-color: rgba(7, 193, 96, 0.1);
}

.game-header {
  margin-bottom: 16rpx;
}

.game-time {
  font-size: 24rpx;
  color: var(--text-color-light);
}

.game-scores {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
}

.score-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.score {
  font-size: 28rpx;
  font-weight: bold;
}

.empty {
  padding: 0 0;
  text-align: center;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-color-light);
}

/* 分数输入弹窗 */
.score-input-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
}

.modal-content {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.modal-header {
  padding: 30rpx;
  text-align: center;
  border-bottom: 2rpx solid var(--border-color-light);
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-color);
}

.score-inputs {
  padding: 30rpx;
}

.input-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.input-item:last-child {
  margin-bottom: 0;
}

.score-input {
  flex: 1;
  height: 80rpx;
  font-size: 32rpx;
  color: var(--text-color);
  padding: 0 20rpx;
  margin-left: 20rpx;
  background-color: var(--bg-color);
  border-radius: 8rpx;
}

.modal-footer {
  padding: 30rpx;
  border-top: 2rpx solid var(--border-color-light);
}

.modal-submit-btn {
  width: 100%;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  background-color: var(--primary-color);
  border-radius: 8rpx;
}

.modal-submit-btn.disabled {
  background-color: var(--disabled-color);
}

.modal-submit-btn::after {
  display: none;
}

/* 字体图标 */
@font-face {
  font-family: 'iconfont';
  src: url('data:font/woff2;charset=utf-8;base64,') format('woff2');
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 32rpx;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-warning:before {
  content: "\e683";
}

.icon-add:before {
  content: "\e6b9";
}

.icon-arrow:before {
  content: "\e665";
}

.room-status {
  display: inline-flex;
  align-items: center;
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 24rpx;
  background-color: rgba(24, 144, 255, 0.1);
  color: #1890ff;
  font-weight: 500;
  flex-shrink: 0;
}

.room-status::before {
  content: '';
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #1890ff;
  margin-right: 8rpx;
}

.room-status.ended {
  background-color: rgba(0, 0, 0, 0.05);
  color: #999;
}

.room-status.ended::before {
  background-color: #999;
}

.end-btn {
  font-size: 26rpx;
  padding: 12rpx 32rpx;
  background-color: #ff4d4f;
  color: white;
  border-radius: 24rpx;
  line-height: 1.4;
  transition: all 0.3s ease;
  border: none;
}

.end-btn:active {
  opacity: 0.8;
}

.room-actions {
  margin-left: auto;
  margin-right: 16rpx;
  display: flex;
  gap: 16rpx;
}

.invite-btn {
  font-size: 26rpx;
  padding: 12rpx 32rpx;
  background-color: #07c160;
  color: white;
  border-radius: 24rpx;
  line-height: 1.4;
  transition: all 0.3s ease;
  border: none;
}

.invite-btn:active {
  opacity: 0.8;
}