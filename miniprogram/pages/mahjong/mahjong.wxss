.container {
  padding: 30rpx;
  min-height: 100vh;
  box-sizing: border-box;
  background-color: #f5f5f5;
}

.header {
  margin-bottom: 30rpx;
}

.create-btn {
  width: 100%;
  text-align: center;
  background-color: #07c160;
  color: #fff;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.qr-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  text-align: center;
  margin-bottom: 30rpx;
}

.qr-header {
  margin-bottom: 30rpx;
}

.qr-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.qr-subtitle {
  font-size: 28rpx;
  color: #666;
}

.qr-code {
  width: 400rpx;
  height: 400rpx;
  margin: 20rpx 0;
}

.share-btn {
  margin-top: 30rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 8rpx;
  font-size: 32rpx;
}

.rooms-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.room-item {
  background: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border: 1px solid #eee;
}

.room-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.room-info {
  flex: 1;
}

.room-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 4rpx;
  display: block;
}

.room-time {
  font-size: 24rpx;
  color: #999;
}

.room-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  background-color: #e6f7ff;
  color: #1890ff;
}

.room-status.ended {
  background-color: #f5f5f5;
  color: #999;
}

.room-players {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.player-avatars {
  display: flex;
  margin-right: 16rpx;
}

.player-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  border: 2rpx solid #eaeaea;
  margin-left: -10rpx;
}

.player-avatar:first-child {
  margin-left: 0;
}

.player-count {
  font-size: 24rpx;
  color: #666;
}

.offline-tip {
  position: fixed;
  bottom: 30rpx;
  left: 30rpx;
  right: 30rpx;
  background-color: #fff7e6;
  padding: 16rpx 24rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
}

.icon-warning {
  color: #faad14;
  margin-right: 8rpx;
  font-size: 32rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #d46b08;
}

.loading {
  text-align: center;
  padding: 30rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 字体图标 */
@font-face {
  font-family: 'iconfont';
  src: url('data:font/woff2;charset=utf-8;base64,') format('woff2');
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 32rpx;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-warning:before {
  content: "\e683";
}

.icon-add:before {
  content: "\e6b9";
}

.icon-arrow:before {
  content: "\e665";
}

.room-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.room-creator {
  font-size: 24rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
}

.player-avatar.creator {
  border: 2rpx solid #07c160;
  box-shadow: 0 0 0 2rpx rgba(7, 193, 96, 0.2);
}