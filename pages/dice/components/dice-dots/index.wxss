.dots-container {
  width: 100%;
  height: 100%;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-template-rows: repeat(3, 1fr);
  padding: 10%;
  box-sizing: border-box;
}

.dot {
  background: #333;
  border-radius: 50%;
  margin: 15%;
  box-shadow: inset 0 0 2px rgba(0,0,0,0.5);
}