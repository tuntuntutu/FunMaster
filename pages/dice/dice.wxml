<view class="container">
  <view class="dice-section">
    <text class="title">骰子游戏</text>
    
    <view class="dice-control">
      <text>骰子数量：</text>
      <radio-group bindchange="onDiceCountChange">
        <label><radio value="1" checked="{{diceCount === 1}}"/>1个</label>
        <label><radio value="2" checked="{{diceCount === 2}}"/>2个</label>
      </radio-group>
    </view>

    <view class="dice-area">
      <view class="dice {{isRolling ? 'rolling' : ''}}" wx:for="{{diceResults}}" wx:key="index">
        {{item}}
      </view>
    </view>

    <button bindtap="rollDice" disabled="{{isRolling}}">
      {{isRolling ? '骰子转动中...' : '掷骰子'}}
    </button>
  </view>
</view>